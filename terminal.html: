<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Terminal - Loja404</title>
  <style>
    body {
      background: black;
      color: #0f0;
      font-family: monospace;
      padding: 20px;
    }
    #terminal {
      max-width: 800px;
      margin: 0 auto;
    }
    .input-line {
      display: flex;
    }
    input {
      background: black;
      color: #0f0;
      border: none;
      width: 100%;
      font-family: monospace;
      font-size: 16px;
      outline: none;
    }
  </style>
</head>
<body>
  <div id="terminal">
    <p>root@loja404:~$ Bem-vindo. Digite <strong>help</strong> para comandos.</p>
    <div id="output"></div>
    <div class="input-line">
      <span>></span>&nbsp;
      <input type="text" id="cmd" autofocus>
    </div>
  </div>

  <script>
    const input = document.getElementById('cmd');
    const output = document.getElementById('output');

    input.addEventListener('keydown', function (e) {
      if (e.key === 'Enter') {
        const cmdText = input.value.trim();
        const line = document.createElement('p');
        line.textContent = '> ' + cmdText;
        output.appendChild(line);

        let response = '';
        switch (cmdText.toLowerCase()) {
          case 'help':
            response = 'Comandos disponíveis: help, acesso, loja, sair';
            break;
          case 'acesso':
            response = 'Acesso negado. Permissão insuficiente.';
            break;
          case 'loja':
            response = 'Redirecionando... (simulação falha)';
            break;
          case 'sair':
            response = 'Encerrando conexão.';
            break;
          default:
            response = 'Comando não reconhecido.';
        }

        const resLine = document.createElement('p');
        resLine.textContent = response;
        output.appendChild(resLine);

        input.value = '';
        window.scrollTo(0, document.body.scrollHeight);
      }
    });
  </script>
</body>
</html>
